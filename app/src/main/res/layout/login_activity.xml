<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.ditclear.paonet.view.auth.viewmodel.LoginViewModel"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_200.0"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerInside"
                android:background="@color/background_item"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                app:cardCornerRadius="@dimen/xdp_6.0"
                app:theme="@style/FormTheme"
                app:contentPadding="@dimen/activity_horizontal_margin">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:error="@{vm.emailError}"
                        app:errorEnabled="@{vm.emailInValid}"
                        app:errorTextAppearance="@color/error_color">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="邮箱"
                            android:text="@={vm.email}"
                            android:textColorHint="@color/colorPrimary"
                            android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:error="@{vm.passwordError}"
                        app:errorEnabled="@{vm.passwordInValid}"
                        app:errorTextAppearance="@color/error_color"
                        app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="密码"
                            android:textColorHint="@color/colorPrimary"
                            android:text="@={vm.password}"
                            android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.v4.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/activity_vertical_margin"/>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="@dimen/xdp_25.0">

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:text="login"
                            android:onClick="@{()->vm.attemptToSignIn()}"
                            android:enabled="@{vm.btnEnabled}"
                            android:textColor="@color/colorAccent"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>